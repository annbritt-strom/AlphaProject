@model LoginViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Log In";
}

<div class="card">

    <div class="header-body-wrapper">
        <div class="card-header">
            <h1>Login</h1>
        </div>

        <div class="card-body">
            <form method="post" asp-controller="LogIn" asp-action="Index" novalidate>
            <div class="form-group">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-input" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-input" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-checkbox-group">
                <label class="form-checkbox">
                    <input asp-for="RememberMe" class="form-checkbox-input">Remember me
                </label>
            </div>

            <button type="submit" class="btn">Log In</button>
            </form>
        </div>
    </div>

    <div class="card-footer">
        <p>Don't have an account? <a asp-controller="SignUp" asp-action="Index">Sign Up</a></p>
    </div>

</div>