@model ProjectViewModel

<div class="project card" data-project-id="@Model.Id">
    <div class="card-header">
        <div class="project-image">
            <img src="images/project-icon.svg" alt="project icon">
        </div>
        <div class="project-info-flex">
            <h6 class="project-title">@Model.ProjectTitle</h6>
            <span class="project-client">@Model.ClientName</span>
        </div>
        <div class="project-actions-container">
            <button type="button" data-type="dropdown" data-target="#project-dropdown-@Model.Id" class="btn-action">
                <i class="bi bi-three-dots"></i>
            </button>
            <div id="project-dropdown-@Model.Id" class="dropdown">
                <nav class="dropdown-options">
                    <button data-type="modal" data-target="#edit-project-modal" class="dropdown-action edit-action">
                        <i class="bi bi-pencil-square"></i>
                        <span>Edit</span>
                    </button>
                </nav>
                <div class="horizontal-divider"></div>
                <nav class="dropdown-options">
                    <button class="dropdown-action edit-action delete">
                        <i class="bi bi-trash3-fill"></i>
                        <span>Delete Project</span>
                    </button>
                </nav>
            </div>
        </div>
    </div>
    <div class="card-body">
        <p>@Html.Raw(Model.ProjectDescription)</p>
    </div>
</div>